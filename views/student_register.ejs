<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>student registration form</title>
  </head>
  <body>
    <div class="form">
      <h1>student registration form</h1>
      <form method="post" action="/student_register">
      <label>First name</label>
      <input type="text" name="fname" id="fname" placeholder="eneter your name" required><br><br>

      <label>last name</label>
      <input type="text" name="lname" id="lname" placeholder="enter your last name" required><br><br>

      <label>adress</label>
      <textarea name="address" id="add" rows="5" cols="50" placeholder="enter yout address" required></textarea>

      <label>gender</label>
      <input type="radio" name="gender" id="nm" >male
      <input type="radio" name="gender" id="nm" >female
      <input type="radio" name="gender" id="nm" >others
      <br><br>

      <label>date of birth</label>
      <input type="date" id="num" name="birth_date"><br><br>

      <label>phone number </label>
      <input type="text" name="phone_num" id="num" placeholder="enter your personal contact number :"><br><br>

      <label>Department </label>
      <select name="dept">
        <% data.forEach(function(item){  %>
        <option><%= item.dept_no %></option>
        <% }) %>
      </select>
      <input type="submit" value="submit" id ="su"><br><br>
      </form>
    </div>
  </body>
</html>
